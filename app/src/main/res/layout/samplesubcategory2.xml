<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:gravity="center"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/design_default_color_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_on_primary"
        app:cardElevation="6dp"
        android:layout_margin="5dp">
    <ImageView
        android:id="@+id/sub_date"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_person_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sub_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subcategory"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
       android:layout_toRightOf="@+id/cardview"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 000 "
        android:layout_below="@id/sub_data"
        android:layout_toRightOf="@+id/mrp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="2dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_data"
        android:text=" 00 "
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cardview"
        android:textStyle="normal" />

   <View
       android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_alignStart="@id/mrp"
       android:layout_alignEnd="@+id/mrp"
        android:layout_below="@id/sub_data"
       android:layout_marginTop="10dp"
       />

        <ImageView
            android:id="@+id/addmore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_photo_24"
           android:layout_marginTop="20dp"
            android:layout_below="@+id/sub_data"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/delete"/>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/sub_data"
            android:layout_marginRight="10dp"
           android:layout_toLeftOf="@+id/product_whatsapp_share"/>

        <ImageView
            android:id="@+id/product_whatsapp_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_edit_24"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/sub_data"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>
