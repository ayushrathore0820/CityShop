<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/design_default_color_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_on_primary"
            app:cardElevation="6dp"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/textViewImg"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subcategory"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cardview"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/textViewPHONE_NUMBER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 000 "
            android:layout_below="@id/textViewNAME"
            android:layout_toRightOf="@+id/textViewMrp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="2dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textViewMrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNAME"
            android:text=" 00 "
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cardview"
            android:textStyle="normal" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_alignStart="@id/textViewMrp"
            android:layout_alignEnd="@+id/textViewMrp"
            android:layout_below="@id/textViewNAME"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/cart_item_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cardview"
            android:layout_below="@+id/textViewMrp"
            android:text="Quantity - "
            android:textStyle="italic"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textViewQnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:textStyle="italic"
            android:text="00" />

    </RelativeLayout>

</RelativeLayout>

