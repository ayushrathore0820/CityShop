<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:id="@+id/relativelayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@color/cardview_light_background">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@color/cardview_light_background"
            app:cardElevation="6dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/product_vendor_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/shopname2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" service name "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cardview"
            android:gravity="center"
            android:padding="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/dot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_below="@id/shopname2"
            android:textColor="@color/design_default_color_on_primary"
            android:layout_centerHorizontal="true"
            android:textStyle="normal" />

        <View
            android:id="@+id/view_5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_below="@+id/shopname2"
            android:layout_gravity="center"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/mrp_cardvie"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/shopname2"
            android:layout_margin="5dp"
            android:layout_alignStart="@id/shopname2"
            android:layout_alignEnd="@id/dot3">
            <TextView
                android:id="@+id/mrp_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="000 Rs"
                android:layout_margin="10dp"
                android:layout_below="@id/view"
                android:layout_gravity="center"/>
            <View
                android:id="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimaryDark"
               android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/price_cardview"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/shopname2"
            android:layout_margin="5dp"
            android:layout_alignStart="@id/dot3"
            android:layout_alignEnd="@id/shopname2">
            <TextView
                android:id="@+id/price_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text=" 000 Rs"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_below="@id/view"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/addtocart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrp_cardvie"
            android:text=" Add "
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:layout_alignStart="@id/shopname2"
            android:background="@color/design_default_color_background"
            android:layout_alignEnd="@id/dot3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mrp_cardvie"
           android:layout_alignStart="@+id/dot3"
            android:layout_alignEnd="@+id/shopname2"
           android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
         android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detail_decrease"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bt_uifb"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:textAlignment="center"
                android:textSize="10dp"
                android:text=" - " />

            <TextView
                android:id="@+id/detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text=" 1 "
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/detail_increase"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bt_uifb"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:textSize="10dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text=" + " />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_6"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_below="@+id/relativelayout6"
        android:layout_gravity="center"
        />

</RelativeLayout>
