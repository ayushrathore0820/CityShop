<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:gravity="center"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/cardview_light_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:cardElevation="6dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp">
    <ImageView
        android:id="@+id/sub_date"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_people_alt_24" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sub_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" service name "
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/cardview"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" service category "
        android:layout_marginTop="5dp"
        android:layout_below="@id/sub_data"
        android:textColor="@color/colorPrimaryDark"
       android:layout_centerHorizontal="true"
        android:textStyle="normal" />
        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_marginTop="5dp"
            android:layout_below="@id/sub_data"
            android:textColor="@color/design_default_color_on_primary"
            android:layout_centerHorizontal="true"
            android:textStyle="normal" />

   <View
       android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_below="@id/page"
       android:layout_marginTop="5dp"
       android:layout_alignStart="@id/cardview"
       android:layout_alignEnd="@id/cardview"
       />

        <androidx.cardview.widget.CardView
            android:id="@+id/call"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/view"
            android:layout_margin="5dp"
            android:layout_alignStart="@id/cardview"
            android:layout_alignEnd="@id/dot">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_call_24"
           android:layout_margin="10dp"
            android:layout_below="@id/view"
           android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/product_whatsapp_share"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/view"
            android:layout_margin="5dp"
            android:layout_alignStart="@id/dot"
            android:layout_alignEnd="@id/cardview">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whatsappicon"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_below="@id/view"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
