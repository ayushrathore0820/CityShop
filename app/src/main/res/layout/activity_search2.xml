<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
tools:context=".Search2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">


    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Detail"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#2E4053"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A8A8A8"
        android:layout_centerVertical="true"
        android:layout_below="@id/product_name"
        android:layout_marginTop="5dp"/>


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/view1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/customerimg"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A8A8A8"
        android:layout_below="@+id/product_image" />

    <ImageView
        android:id="@+id/product_imageimage1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/customerimg"
       android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/view2"/>
    <ImageView
        android:id="@+id/product_imageimage2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/customerimg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/view2"/>
    <ImageView
        android:id="@+id/product_imageimage3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/customerimg"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_below="@id/view2"/>

    <TextView
        android:id="@+id/txt_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_imageimage1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="Category -"/>

    <TextView
        android:id="@+id/product_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_imageimage1"
        android:layout_toRightOf="@id/txt_mrp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="00"/>


    <TextView
        android:id="@+id/txt_ourmrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mrp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse"
        android:textColor="@color/colorPrimaryDark"
        android:text="Price Rs"/>

    <TextView
        android:id="@+id/product_ourmrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mrp"
        android:layout_toRightOf="@id/txt_ourmrp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse"
        android:text="00"/>

    <TextView
        android:id="@+id/txt_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ourmrp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:text="Call us"/>

    <TextView
        android:id="@+id/product_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ourmrp"
        android:layout_toRightOf="@id/txt_saving"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:textStyle="italic"
        android:autoLink="phone"
        android:linksClickable="true"/>


    <TextView
        android:id="@+id/txtdispription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_saving"
        android:layout_margin="5dp"
        android:text=" Description "
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view5"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
        android:text=" * No Description for the Product Found * "/>

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/txtdispription"
        android:background="#A8A8A8"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>

    <View
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/discription"
        android:background="#A8A8A8"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/whatsapp_addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Contact on WhatsApp "
        android:background="@color/design_default_color_secondary_variant"
        android:textColor="@color/design_default_color_background"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/recylcerView5"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtsimilar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Similar products "
        android:textSize="20dp"
        android:gravity="left"
        android:layout_below="@id/view8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="italic"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylcerView5"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/txtsimilar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scrollbars = "horizontal" />

</RelativeLayout>
    </ScrollView>
</RelativeLayout>